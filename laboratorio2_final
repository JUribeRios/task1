std::cout<<"Estructura 1 valor 2: "<< punt->valor2 <<std::endl;
std::cout<<"Estructura 1 valor 3: "<< punt->valor3 <<std::endl;
std::cout<<"Estructura 1 valor 4: "<< punt->valor4 <<std::endl;
