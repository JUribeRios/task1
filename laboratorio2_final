void foo_function(void)
{
static int a=0;
	//Su codigo aqui
if(*((int*)punter)==10 && a==0)
{
a=1;
}
else
{
++punter;
}

   // std::cout<<<<std::endl;
    //Su codigo aqui tambien si quiere
